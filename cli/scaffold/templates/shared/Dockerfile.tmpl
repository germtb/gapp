# Stage 1: Build client
FROM node:22-slim AS client-builder
WORKDIR /app/client
COPY client/package.json client/package-lock.json ./
RUN npm ci
COPY client/ ./
RUN npm run build

# Stage 2: Build server
FROM golang:1.24-alpine AS server-builder
WORKDIR /app/server
# NOTE: If server/go.mod uses a local "replace" directive for the gapp module,
# you must update it to use a published version or vendor the dependency
# before building with Docker.
COPY server/go.mod server/go.sum ./
RUN go mod download
COPY server/ ./
COPY --from=client-builder /app/client/dist ./public
RUN CGO_ENABLED=0 go build -o /app/server-bin .

# Stage 3: Runtime
FROM alpine:3.21
RUN apk add --no-cache ca-certificates
WORKDIR /app
COPY --from=server-builder /app/server-bin ./server
COPY --from=server-builder /app/server/public ./public
EXPOSE 8080
CMD ["./server"]
